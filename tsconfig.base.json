{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "composite": true
  },
  "references": [
    // 해당 패키지를 참조할수있음
    {
      "path": "./package/core"
    },
    {
      "path": "./package/zmng"
    }
  ]
}
